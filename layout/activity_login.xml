<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1e7f1"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#23395d">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="276dp"
            android:layout_height="153dp"
            app:layout_constraintBottom_toTopOf="@+id/cardView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="331dp"
            android:layout_height="579dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#d1e7f1"
            app:cardBackgroundColor="#f0f0f0"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.809">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/buttonLoginAsUser"
                    android:layout_width="200dp"
                    android:layout_height="58dp"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="#5f9ea0"
                    android:text="Student Login"
                    android:textColor="#f0f0f0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonSignUpAsUser" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonLoginAsLecturer"
                    app:srcCompat="@drawable/user9" />

                <Button
                    android:id="@+id/buttonLoginAsLecturer"
                    android:layout_width="200dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="66dp"
                    android:layout_marginEnd="65dp"
                    android:backgroundTint="#4c5e91"
                    android:text="Lecturer Login"
                    android:textColor="#f0f0f0"
                    android:textColorHint="#f0f0f0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonSignUpAsLecturer"
                    app:layout_constraintVertical_bias="0.025" />

                <Button
                    android:id="@+id/buttonSignUpAsLecturer"
                    android:layout_width="200dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#4C9FD4"
                    android:text="Lecturer Sign Up"
                    android:textColor="#00264d"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView17" />

                <Button
                    android:id="@+id/buttonSignUpAsUser"
                    android:layout_width="200dp"
                    android:layout_height="58dp"
                    android:layout_marginStart="66dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="66dp"
                    android:layout_marginBottom="-2dp"
                    android:backgroundTint="#87ceeb"
                    android:text="Student Sign Up"
                    android:textColor="#00264d"
                    app:layout_constraintBottom_toTopOf="@+id/buttonLoginAsUser"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView18" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/manager" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>